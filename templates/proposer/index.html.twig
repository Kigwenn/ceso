{% extends 'base.html.twig' %}

{% block title %}Proposer index{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 text-center" style="margin-top: 20px">
            <bouton type="bouton" class="btn btn-default">
                <a  href="{{ path('centres_formations_index') }}" style="color: #000"><i clsss="fa fa-fw fa-plus"></i>Centres de formations</a>
            </bouton>
            <bouton type="bouton" class="btn btn-default">
                <a  href="{{ path('formations_index') }}" style="color: #000"><i clsss="fa fa-fw fa-plus"></i>Formation</a>
            </bouton>
            <bouton type="bouton" class="btn btn-default">
                <a  href="{{ path('catalogues_index') }}" style="color: #000"><i clsss="fa fa-fw fa-plus"></i>Catalogues</a>
            </bouton>
            <bouton type="bouton" class="btn btn-success">
                <a  href="{{ path('proposer_index') }}" style="color: #FFF"><i clsss="fa fa-fw fa-plus"></i>Formation commander</a>
            </bouton>
        </div>
    </div>

    <h1 class="col-lg-offset-1 col-lg-10">Planning formation</h1>

    <table class="col-lg-offset-2 col-lg-8 table-responsive" style="margin-top: 40px;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Centres Formations</th>
                <th>Catalogues</th>
                <th>Formations</th>
                <th class="text-right">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proposer in proposers %}
            <tr>
                <td>{{ proposer.id }}</td>
                <td>
                    <a href="{{ path('proposer_show', {'id': proposer.id}) }}">show</a>
                    <a href="{{ path('proposer_edit', {'id': proposer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 text-center" style="margin-top: 20px">
            <bouton type="bouton" class="btn btn-success">
                <a  href="{{ path('proposer_new') }}" style="color: #FFF"><i clsss="fa fa-fw fa-plus"></i>Creer une nouvelle formation</a>
            </bouton>
        </div>
    </div>
{% endblock %}
